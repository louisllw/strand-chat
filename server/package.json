{
  "name": "strand-chat-server",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "tsx watch index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "migrate": "npm run build && node dist/db/migrate.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "npm run build && NODE_ENV=test node --test dist/tests/*.test.js",
    "test:integration": "npm run build && NODE_ENV=test RUN_INTEGRATION_TESTS=true node --test dist/tests/*.test.js",
    "test:coverage": "npm run build && NODE_ENV=test c8 node --test dist/tests/*.test.js"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.17.2",
    "redis": "^5.8.2",
    "sanitize-html": "^2.17.0",
    "socket.io": "^4.8.1",
    "web-push": "^3.6.7",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.10",
    "@types/pg": "^8.15.5",
    "@types/sanitize-html": "^2.16.0",
    "@types/web-push": "^3.6.4",
    "c8": "^10.1.3",
    "socket.io-client": "^4.8.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "c8": {
    "check-coverage": true,
    "lines": 35,
    "statements": 35,
    "functions": 35,
    "branches": 30,
    "exclude": [
      "dist/services/pushService.js",
      "dist/models/pushSubscriptionModel.js",
      "dist/routes/push.js",
      "dist/env.js"
    ]
  }
}
